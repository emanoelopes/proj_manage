<div class="row clearfix">
	<% if tarefa.completed? %>
		<div class="complete">
			<%= link_to "Mark as complete", complete_projeto_tarefa_path(@projeto, tarefa.id), method: :patch %>
		</div>
		<div class="task">
			<p style="opacity: 0.4;"><strike><%= tarefa.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", projeto_tarefa_path(@projeto, tarefa.id), method: :delete, data: {confirm: "Are you sure?"} %>
		</div>
	<% else %>
		<div class="complete">
			<%= link_to "Mark as complete", complete_projeto_tarefa_path(@projeto, tarefa.id), method: :patch %>
		</div>
		<div class="task">
			<p style="opacity: 0.4;"><strike><%= tarefa.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", projeto_tarefa_path(@projeto, tarefa.id), method: :delete, data: {confirm: "Are you sure?"} %>
		</div>
	<% end %>
</div>